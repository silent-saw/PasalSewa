<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pasalsewa.pasalsewa">
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".CategoriesActivity" />
        <activity android:name=".TransactionActivity" />
        <activity android:name=".ItemListActivity" />
        <activity android:name=".ItemDetailsActivity" />
        <activity android:name=".CustomerListActivity" />
        <activity android:name=".SortedItemListActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".CustomerEntry" />
        <activity android:name=".CustomerInfoActivity" />
        <activity
            android:name=".AddCategory"
            android:theme="@style/AppTheme.popuptheme" />
        <activity
            android:name=".AddItem"
            android:theme="@style/AppTheme.popuptheme" />
    </application>

</manifest>