<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <TextView
            android:id="@+id/bill_id"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="2"

            android:gravity="center"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_name"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="5"

            android:gravity="center"
            android:text="Sachin Maharjan"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/customer_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:src="@drawable/person" />
    </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/bp_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
    <LinearLayout
        android:weightSum="12"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:weightSum="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bill_amount_title"
                android:gravity="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:text="Amount Total"
                android:textSize="20sp"
                style="@style/TextStyle"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/bill_paid_title"
                android:gravity="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:text="Amount Paid"
                android:textSize="20sp"
                style="@style/TextStyle"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/bill_due_title"
                android:gravity="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:text="Amount Due"
                android:textSize="20sp"
                style="@style/TextStyle"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:weightSum="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bill_amount"
                android:gravity="end"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:text="Amount Total"
                android:textSize="18sp"
                style="@style/TextStyle"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/bill_paid"
                android:gravity="end"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:text="Amount Paid"
                android:textSize="18sp"
                style="@style/TextStyle"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/bill_due"
                android:gravity="end"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:text="Amount Due"
                android:textSize="18sp"
                style="@style/TextStyle"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <TextView
            android:id="@+id/status_title"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="5"

            android:gravity="center"
            android:text="Status"
            android:textSize="30sp"
            android:textStyle="bold" />



        <TextView
            android:layout_gravity="center"
            android:id="@+id/status"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="5"

            android:gravity="center"
            android:text="Credit"
            android:textSize="25sp" />


    </LinearLayout>
    </LinearLayout>

</FrameLayout>